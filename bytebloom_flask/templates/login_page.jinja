{% extends 'base.html' %}

{% block title %}Login{% endblock %}

{% block unique_stylesheets %}<link rel="stylesheet" href="{{ url_for('static', filename='login_page.css') }}">{% endblock %}

{% block content %}
    <div id="panels">
        <div id="login-panel">
            <h2>Login</h3>
            <form method="post">
                <label for="username">Username: </label>
                <input type="text" name="username">

                <label for="password">Password: </label></span>
                <input type="password" name="password">

                <input type="submit" value="Submit" class="submit">
            </form>
            {% with messages = get_flashed_messages() %}
                {% if messages %}
                    <div class="error-flash">
                    {% for message in messages %}
                        <p>{{message}}</p>
                    {% endfor %}
                    </div>
                {% endif %}
            {% endwith %}
        </div>

        <div id="aesthetic-panel">
            {% for x in range(food_image_paths | length) %}
                <img class="fade-img" src="{{ food_image_paths[x] }}"
                style="animation-delay: rem({{ x*3.5 }}s, 16s);
                position: absolute;
                top: abs({{ vertical_positions[x] }}% - 250px);
                left: abs({{ horizontal_positions[x] }}% - 250px);">
            {% endfor %}
        </div>
    </div>
{% endblock %}